{
  "name": "root",
  "private": true,
  "type": "module",
  "version": "0.4.2",
  "devDependencies": {
    "@vitest/browser": "^1.6.0",
    "@vitest/coverage-istanbul": "^1.6.0",
    "conventional-changelog-cli": "^4.1.0",
    "jsdom": "^24.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^15.2.2",
    "picocolors": "^1.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.11.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vitest": "^1.6.0",
    "webdriverio": "^8.36.1"
  },
  "scripts": {
    "build": "lerna run build",
    "publish:all": "lerna publish from-package --no-verify-access --no-private --yes --dist-tag latest",
    "publish:all:next": "lerna publish from-package --no-verify-access --no-private --yes --dist-tag next",
    "build:api": "lerna run build:api",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "postinstall": "simple-git-hooks"
  },
  "workspaces": [
    "packages/*"
  ],
  "simple-git-hooks": {
    "commit-msg": "node scripts/verify-commit.js",
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.{json,ts,tsx,js,md}": [
      "prettier --write"
    ]
  }
}
